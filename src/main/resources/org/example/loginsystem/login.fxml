<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="414.0" prefWidth="365.0" snapToPixel="false" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.loginsystem.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="errorLabel" prefHeight="43.0" prefWidth="282.0" textFill="RED">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="365.0" text="Enter your email and password" textAlignment="CENTER">
        <font>
            <Font name="Corbel" size="25.0" />
        </font>
    </Label>
    <TextField fx:id="email" promptText="Write email" />
    <TextField fx:id="username" promptText="Write username" />
    <PasswordField fx:id="password" promptText="Type password" />
    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onSubmitButtonClick" text="Login" />
    <GridPane alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Button fx:id="signUpButton" alignment="CENTER" mnemonicParsing="false" onAction="#onSignUpButtonClick" prefHeight="18.0" prefWidth="111.0" text="Sign Up" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <font>
                    <Font name="Arial Italic" size="12.0" />
                </font>
            </Button>
        </children>
    </GridPane>
</VBox>
